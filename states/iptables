#!/bin/sh
set -e

# First deploy file but ensure directory is present
$SHELL ${TMPDIR}/modules/dir -d /tmp/iptables
$SHELL ${TMPDIR}/modules/file -s "${TMPDIR}/files/etc/iptables/iptables.rules" \
                              -d "/tmp/iptables/iptables.rules"

# Then if successful restart service
$SHELL ${TMPDIR}/modules/service restart iptables
